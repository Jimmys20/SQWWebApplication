@page
@model SQWWebApplication.Pages.Players.IndexModel

<p>
  <a asp-page="./Create">Create</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>Link Id</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Birth Date</th>
      <th>Last Visit</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var player in Model.players)
    {
      <tr>
        <td>@player.linkId</td>
        <td>@player.firstName</td>
        <td>@player.lastName</td>
        <td>@player.birthDate</td>
        <td>@player.lastVisit</td>
        <td>
          <a asp-page="./Edit" asp-route-id="@player.linkId">Edit</a>
          <a asp-page="./Delete" asp-route-id="@player.linkId">Delete</a>
        </td>
      </tr>
    }
  </tbody>
</table>