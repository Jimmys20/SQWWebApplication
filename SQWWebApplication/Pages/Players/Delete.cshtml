@page
@model SQWWebApplication.Pages.Players.DeleteModel

<dl class="row">
  <dt class="col-sm-2">Id</dt>
  <dd class="col-sm-10">@Model.player.linkId</dd>
  <dt class="col-sm-2">First Name</dt>
  <dd class="col-sm-10">@Model.player.firstName</dd>
  <dt class="col-sm-2">Last Name</dt>
  <dd class="col-sm-10">@Model.player.lastName</dd>
  <dt class="col-sm-2">Last Visit</dt>
  <dd class="col-sm-10">@Model.player.lastVisit</dd>
</dl>

<form method="post">
  <input type="hidden" asp-for="player.linkId" />
  <input type="submit" value="Delete" class="btn btn-danger" />
</form>